<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundpurple"
    android:orientation="vertical"

    tools:context=".preHardC">

    <Button
        android:id="@+id/btnCa10"
        android:layout_width="65dp"
        android:layout_height="54dp"

        android:layout_marginStart="25dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/vazio"
        android:fontFamily="@font/terrariafont"
        android:onClick="volta"
        android:text=" "
        android:textAlignment="viewStart"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnCa2"
        android:layout_width="65dp"
        android:layout_height="54dp"

        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/vazio"
        android:fontFamily="@font/terrariafont"
        android:onClick="hard"
        android:text=" "
        android:textAlignment="viewStart"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!--    fim dos Buttons e começo do ImageView-->

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="56dp"
        android:layout_height="43dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:rotationY="-180"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/buttonback" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="0dp"
        android:layout_height="82dp"
        android:layout_marginBottom="275dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/title" />

    <!--    fim do ImageVIew e começo do TextView-->

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="162dp"
        android:layout_marginBottom="280dp"
        android:fontFamily="@font/terrariafont"
        android:text="@string/txt_eventos"
        android:textColor="#272727"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView51"
        android:layout_width="56dp"
        android:layout_height="43dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="30dp"
